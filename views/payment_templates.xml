<odoo>
    <data>
        <template id="payment_form_bkash" name="bKash Payment Form">
            <form method="post" action="/payment/bkash/feedback">
                <div>
                    <label for="amount">Amount:</label>
                    <input type="text" name="amount" required="required"/>
                </div>
                <div>
                    <label for="reference">Order Reference:</label>
                    <input type="text" name="reference" required="required"/>
                </div>
                <!-- Additional fields if any -->
                <div>
                    <button type="submit">Pay with bKash</button>
                </div>
            </form>
        </template>
    </data>
</odoo>
